            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/uLetter" />

        <Button
            android:id="@+id/buttonI"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/iLetter" />

        <Button
            android:id="@+id/buttonO"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/oLetter" />

        <Button
            android:id="@+id/buttonP"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/pLetter" />

        <Button
            android:id="@+id/buttonAa"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/aaLetter" />

        <Button
            android:id="@+id/buttonW"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:layout_row="0"
            android:background="@drawable/button_state"
            android:text="@string/wLetter"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonQ"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:layout_row="0"
            android:background="@drawable/button_state"
            android:text="@string/qLetter" />
    </GridLayout>

    <GridLayout
        android:id="@+id/GridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/GridLayout3"
        android:layout_alignLeft="@+id/gridLayout1"
        android:layout_marginBottom="3dp"
        android:columnCount="12" >

        <Button
