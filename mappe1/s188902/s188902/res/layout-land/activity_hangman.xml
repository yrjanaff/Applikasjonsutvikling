            android:background="@drawable/button_state"
            android:text="@string/sLetter" />

        <Button
            android:id="@+id/buttonD"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/dLetter" />

        <Button
            android:id="@+id/buttonF"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/fLetter" />

        <Button
            android:id="@+id/buttonG"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/gLetter" />

        <Button
            android:id="@+id/buttonH"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/hLetter" />

        <Button
            android:id="@+id/buttonJ"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/jLetter" />

        <Button
            android:id="@+id/buttonK"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
