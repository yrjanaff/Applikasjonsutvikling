            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/mLetter" />
    </GridLayout>

    <ImageView
        android:id="@+id/hang_View"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_above="@+id/gridLayout1"
        android:layout_alignLeft="@+id/gridLayout1"
        android:contentDescription="@+string/showhang"
        android:src="@drawable/hang_base" />

    <LinearLayout
        android:id="@+id/TextBoxLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hang_View"
        android:layout_marginBottom="21dp"
        android:layout_toRightOf="@+id/hang_View"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>