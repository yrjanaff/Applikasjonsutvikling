            android:text="@string/kLetter" />

        <Button
            android:id="@+id/buttonL"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/lLetter" />

        <Button
            android:id="@+id/buttonOe"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/oeLetter" />

        <Button
            android:id="@+id/buttonAe"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/aeLetter" />
    </GridLayout>

    <GridLayout
        android:id="@+id/GridLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:columnCount="8" >

        <Button
            android:id="@+id/buttonZ"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/zLetter" />

        <Button
            android:id="@+id/buttonX"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/xLetter"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonC"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/cLetter" />

        <Button
            android:id="@+id/buttonV"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_state"
            android:text="@string/vLetter" />

        <Button
            android:id="@+id/buttonB"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/button_margin"
            android:layout_marginLeft="3dp"
